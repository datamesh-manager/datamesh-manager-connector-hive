<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>3.5.5</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>
    <groupId>com.datamesh-manager</groupId>
    <artifactId>datamesh-manager-connector-hive</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>datamesh-manager-connector-hive</name>
    <description>DataMesh Manager Connector for Hive</description>
    <properties>
        <java.version>17</java.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    </properties>
    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-actuator</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>

        <dependency>
            <groupId>com.datamesh-manager</groupId>
            <artifactId>datamesh-manager-sdk</artifactId>
            <version>0.0.4</version>
        </dependency>

        <!-- Test dependencies -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>

    </dependencies>


    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
        </resources>
        <plugins>
            <!-- Copy drivers folder to lib directory in target -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-drivers</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/lib</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>drivers</directory>
                                    <includes>
                                        <include>*.jar</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <mainClass>datameshmanager.hive.Application</mainClass>
                    <layout>JAR</layout>
                    <additionalProperties>
                        <loader.path>lib/</loader.path>
                    </additionalProperties>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <!-- Maven Profiles for JDBC Driver Management -->
    <profiles>
        <!-- Profile 1: Include Hive JDBC driver (default) -->
        <!-- Usage: mvn clean install (default behavior) -->
        <profile>
            <id>hive-jdbc-included</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <dependencies>
                <!-- Hive JDBC Driver -->
                <dependency>
                    <groupId>org.apache.hive</groupId>
                    <artifactId>hive-jdbc</artifactId>
                    <version>4.1.0</version>
                    <classifier>standalone</classifier>
                </dependency>
            </dependencies>
        </profile>

        <!-- Profile 2: Exclude Hive JDBC driver for external provision -->
        <!-- Usage: mvn clean install -Phive-jdbc-external -->
        <!-- Place custom JDBC drivers in the 'drivers' folder or provide via classpath -->
        <profile>
            <id>hive-jdbc-external</id>
        </profile>
    </profiles>

  <repositories>
    <repository>
      <id>central</id>
      <name>Maven Central Repository</name>
      <url>https://repo1.maven.org/maven2/</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
  </repositories>

</project>
